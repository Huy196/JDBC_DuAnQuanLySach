<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="750.0" prefWidth="1444.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duanquanlysach.Login">
   <ImageView fitHeight="794.0" fitWidth="1622.0" layoutX="-47.0" pickOnBounds="true">
      <image>
         <Image url="https://a-static.besthdwallpaper.com/sunrise-anime-scenery-art-wallpaper-2560x1600-90530_7.jpg" />
      </image></ImageView>
    <VBox alignment="CENTER" layoutX="475.0" layoutY="94.0" prefHeight="560.0" prefWidth="623.0" spacing="20" style="-fx-background-color: rgba(253, 238, 238, 0.7);              -fx-padding: 20;              -fx-background-radius: 10;              -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 2);              -fx-border-color: transparent;">

        <ImageView fitHeight="155.0" fitWidth="175.0">
            <Image url="https://cdn.sforum.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" />

        </ImageView>

        <Label alignment="CENTER" prefHeight="39.0" prefWidth="186.0" text="ĐĂNG NHẬP">
            <font>
                <Font size="27.0" />
            </font>
        </Label>
        <VBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="74.0" prefWidth="582.0" spacing="20">
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="582.0" spacing="10">
                <SplitPane prefHeight="27.0" prefWidth="114.0">
                    <items>
                        <Label alignment="CENTER" prefHeight="18.0" prefWidth="113.0" text="Tên đăng nhập" />
                    </items>
                </SplitPane>

                <TextField fx:id="nameLogin" prefHeight="55.0" prefWidth="330.0" promptText="Tên đăng nhập" />

            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <SplitPane prefHeight="26.0" prefWidth="114.0">
                    <items>
                        <Label alignment="CENTER" prefHeight="18.0" prefWidth="121.0" text="Mật khẩu" />
                    </items>
                </SplitPane>

                <PasswordField fx:id="password" prefHeight="26.0" prefWidth="330.0" promptText="Mật khẩu" />
            </HBox>
        </VBox>
        <HBox alignment="CENTER" spacing="10">
            <CheckBox text="Xem mật khẩu" />
            <Label fx:id="falsePassword" prefHeight="18.0" prefWidth="315.0" style="-fx-text-fill: red" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="56.0" prefWidth="768.0" spacing="20">
            <Button onAction="#Login" prefHeight="35.0" prefWidth="194.0" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; " text="ĐĂNG NHẬP" />
            <Button onAction="#Login_Sign" prefHeight="35.0" prefWidth="210.0" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;" text="ĐĂNG KÝ" />
        </HBox>
       <Hyperlink style="-fx-font-size: 12px; -fx-text-fill: #4a4a4a; cursor: hand;-fx-text-fill: blue" text="Quên mật khẩu !" />
    </VBox>
</AnchorPane>

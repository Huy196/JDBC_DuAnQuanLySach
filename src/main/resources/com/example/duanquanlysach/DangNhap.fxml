    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 2);">

        <ImageView fitHeight="134.0" fitWidth="206.0" style="-fx-background-radius: 100;">
            <Image url="https://cdn.sforum.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" />
        </ImageView>
        <Label alignment="CENTER" prefHeight="39.0" prefWidth="186.0" text="LOGIN">
            <font>
                <Font size="27.0" />
            </font>
        </Label>
        <VBox alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="74.0" prefWidth="681.0" spacing="20">

                </SplitPane>

                <TextField fx:id="tenDangNhap" prefHeight="26.0" prefWidth="329.0" promptText="username" />

            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <SplitPane prefHeight="26.0" prefWidth="114.0">
                    <items>
                        <Label alignment="CENTER" prefHeight="18.0" prefWidth="121.0" text="Password" />
                    </items>
                </SplitPane>

                <PasswordField fx:id="matKhau" prefHeight="26.0" prefWidth="330.0" promptText="password" />
            </HBox>
        </VBox>
        <HBox alignment="CENTER" spacing="10">
            <CheckBox text="ShowPassword" />
            <Label fx:id="saiMatKhau" prefHeight="18.0" prefWidth="315.0" style="-fx-text-fill: red" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="56.0" prefWidth="768.0" spacing="20">
            <Button onAction="#dangNhap" prefHeight="35.0" prefWidth="194.0" style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; " text="LOGIN" />
